<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_confpay"
        android:layout_width="match_parent"
        android:screenOrientation="portrait"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/ctime"
            android:layout_width="196dp"
            android:layout_height="0dp"
            android:layout_marginTop="56dp"
            android:layout_marginBottom="28dp"
            android:fontFamily="@font/montserrat"
            android:text="00:00:00"
            android:textAlignment="center"
            android:textColor="#B4000000"
            android:textSize="30sp"
            app:layout_constraintBottom_toTopOf="@+id/cok"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/ppay"
            android:layout_width="238dp"
            android:layout_height="52dp"
            android:layout_marginBottom="113dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="confirmed"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/lreg2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cmes" />

    <TextView
            android:id="@+id/camount"
            android:layout_width="238dp"
            android:layout_height="56dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="120 kht"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/cmes"
            app:layout_constraintEnd_toEndOf="@+id/ppay"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/ppay"
            app:layout_constraintTop_toBottomOf="@+id/cok" />

    <TextView
            android:id="@+id/cmes"
            android:layout_width="287dp"
            android:layout_height="55dp"
            android:layout_marginStart="63dp"
            android:layout_marginEnd="63dp"
            android:fontFamily="@font/montserrat"
            android:text="to kht-tabcka\nhave been "
            android:textAlignment="center"
            android:textColor="#B4000000"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@+id/ppay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/camount" />

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="157dp"
            android:layout_height="57dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cok"
            app:srcCompat="@drawable/ic_kht_short" />

    <TextView
            android:id="@+id/lreg2"
            android:layout_width="232dp"
            android:layout_height="32dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="transaction"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ppay" />

    <ImageView
            android:id="@+id/cok"
            android:layout_width="352dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="134dp"
            android:layout_marginBottom="272dp"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/ic_artboard_7" />

</androidx.constraintlayout.widget.ConstraintLayout>