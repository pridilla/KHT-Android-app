<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_pay"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <TextView
            android:id="@+id/ppay"
            android:layout_width="236dp"
            android:layout_height="0dp"
            android:layout_marginTop="301dp"
            android:layout_marginBottom="284dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="pay"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="40sp"
            android:typeface="monospace"
            app:layout_constraintBottom_toTopOf="@+id/imageView3"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/ptime"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="100dp"
            android:fontFamily="@font/montserrat"
            android:text="claim reward"
            android:textAlignment="center"
            android:textColor="#B4000000"
            android:textSize="10sp"
            app:layout_constraintBottom_toTopOf="@+id/pprogressBar"
            app:layout_constraintEnd_toEndOf="@+id/ppay"
            app:layout_constraintStart_toStartOf="@+id/ppay"
            app:layout_constraintTop_toBottomOf="@+id/ppay" />

    <EditText
            android:id="@+id/pamount"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="95dp"
            android:layout_marginTop="119dp"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"
            android:hint="amount"
            android:inputType="number"
            android:textColor="#B4000000"
            app:layout_constraintBottom_toTopOf="@+id/precipient"
            app:layout_constraintEnd_toStartOf="@+id/llog2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <TextView
            android:id="@+id/llog2"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginEnd="136dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="kht"
            android:textAlignment="center"
            android:textColor="#ea3716 "
            android:textSize="20sp"
            android:typeface="monospace"
            app:layout_constraintBaseline_toBaselineOf="@+id/pamount"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/pamount" />

    <EditText
            android:id="@+id/precipient"
            android:layout_width="222dp"
            android:layout_height="0dp"
            android:layout_marginBottom="79dp"
            android:ems="10"
            android:fontFamily="@font/montserrat_bold"
            android:hint="recipient"
            android:inputType="textPersonName"
            android:textColor="#B4000000"
            android:textSize="18sp"
            app:layout_constraintBottom_toTopOf="@+id/ppay"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:screenOrientation="portrait"
            app:layout_constraintTop_toBottomOf="@+id/pamount" />

    <ImageView
            android:id="@+id/imageView3"
            android:layout_width="143dp"
            android:layout_height="0dp"
            android:layout_marginBottom="34dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ppay"
            app:srcCompat="@drawable/ic_kht_short" />

    <TextView
            android:id="@+id/lreg2"
            android:layout_width="240dp"
            android:layout_height="0dp"
            android:layout_marginBottom="2dp"
            android:fontFamily="@font/montserrat_bold"
            android:text="transaction"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/pprogressBar" />

    <ProgressBar
            android:id="@+id/pprogressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="85dp"
            android:layout_height="60dp"
            android:layout_marginBottom="141dp"
            android:foregroundTint="#ea3716 "
            android:indeterminateTint="#ea3716 "
            android:progressTint="#ea3716 "
            app:layout_constraintBottom_toTopOf="@+id/lreg2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ptime" />

</androidx.constraintlayout.widget.ConstraintLayout>